{
  "name": "highlander-boilerplate",
  "version": "1.0.0",
  "description": "React, Redux, RRv4, Webpack 2, Immutable Project Boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "clean": "rimraf dist",
    "format": "prettier-standard 'src/**/*.js' && csscomb",
    "lint": "standard --plugin flowtype --parser babel-eslint --verbose | snazzy && stylelint 'src/**/*.less'",
    "precommit": "lint-staged",
    "start": "node scripts/start.js",
    "test": "node scripts/test.js --env=jsdom"
  },
  "author": "James McNamee <james@dotfold.io>",
  "private": true,
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-react-css-modules": "^2.7.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.0.0",
    "chalk": "^1.1.3",
    "css-loader": "^0.28.1",
    "csscomb": "^4.1.0",
    "cz-conventional-changelog": "^2.0.0",
    "detect-port": "^1.1.2",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-flow": "^1.0.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.46.0",
    "fs-extra": "^3.0.1",
    "git-rev-sync": "^1.9.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "jest": "^20.0.1",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "lint-staged": "^3.4.1",
    "postcss-less": "^1.0.0",
    "preload-webpack-plugin": "^1.2.2",
    "prettier-standard": "^5.0.0",
    "react-dev-utils": "^0.5.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.6.1",
    "script-ext-html-webpack-plugin": "^1.8.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "sw-precache-webpack-plugin": "^0.11.0",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "url-loader": "^0.5.8",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "normalizr": "^3.2.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-immutable": "^4.0.0",
    "reselect": "^3.0.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "standard --plugin flowtype --parser babel-eslint --verbose",
      "git add"
    ],
    "src/**/*.less": [
      "stylelint 'src/**/*.less'",
      "csscomb",
      "git add"
    ]
  },
  "standard": {
    "ignore": [
      "dist/",
      "flow-typed/",
      "flow-libs/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/conf/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  }
}
